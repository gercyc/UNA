@page
@model UNA.Web.Client.Pages.Produtos.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Produto.DescricaoProduto" class="control-label"></label>
                <input asp-for="Produto.DescricaoProduto" class="form-control" />
                <span asp-validation-for="Produto.DescricaoProduto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.Ncm" class="control-label"></label>
                <input asp-for="Produto.Ncm" class="form-control" />
                <span asp-validation-for="Produto.Ncm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.IdUnidadeMedida" class="control-label"></label>
                <select asp-for="Produto.IdUnidadeMedida" class ="form-control" asp-items="ViewBag.IdUnidadeMedida"></select>
            </div>
            <div class="form-group">
                <label asp-for="Produto.Idcategoria" class="control-label"></label>
                <select asp-for="Produto.Idcategoria" class ="form-control" asp-items="ViewBag.Idcategoria"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
