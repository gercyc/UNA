@page
@model UNA.Web.Client.Pages.Produtos.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Produto[0].DescricaoProduto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produto[0].Ncm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produto[0].UnidadeMedida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produto[0].Categoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Produto) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DescricaoProduto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ncm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnidadeMedida.CodUnidadeMedida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.DescricaoCategoria)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.IdProduto">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.IdProduto">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.IdProduto">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
